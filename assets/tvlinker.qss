* {
    font-family: 'Open Sans', sans-serif;
    font-size: 10pt;
    font-weight: 500;
}

QHeaderView::section, QTableCornerButton::section {
    background-color: #65426D;
    color: #FFF;
    font-weight: bold;
    font-size: -1;
    padding: 4px;
}

QHeaderView::down-arrow {
    image: url(:assets/images/down_arrow.png)
}

QHeaderView::up-arrow {
    image: url(:assets/images/up_arrow.png)
}

QTableView {
    margin-top: 8px;
    margin-bottom: 0;
    background: #FFF url(:assets/images/watermark.png) no-repeat center center;
    background-attachment: fixed;
    alternate-background-color: rgba(106, 69, 114, 0.15);
}

QTableView::item:selected {
    background-color: #898989;
    color: #FFF;
}

QLabel#totals {
    margin-top: 6px;
    color: #65426D;
    font-size: 11pt;
    border: none;
}
